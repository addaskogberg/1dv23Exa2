<h2>Edit Snippets</h2>

<form method="post" action="/createsnippet" class="snippet-form">
  <div class="form-label-group">
    <textarea rows="10" cols="80" id="inputsnippet" class="snippet-control" name="snippet" value="{{snippet}}" placeholder="Snippet" required autofocus >
      {{#if snippet}}
      {{snippet}}
      {{/if}}
   </textarea>
  </div>

  <button type="submit" class="btnSnippet">Update</button>
</form>